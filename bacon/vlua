    if enterPressed then
        local newValue = tonumber(jumpTextBox.Text)
        if newValue then
            local humanoid = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                humanoid.JumpPower = newValue
            end
        end
    end
end)
styleButton(jumpTextBox)

